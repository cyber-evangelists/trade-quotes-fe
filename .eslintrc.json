{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "next/core-web-vitals",
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": 0,
        "react/function-component-definition": [
            "error",
            {
                "namedComponents": "function-declaration",
                "unnamedComponents": "arrow-function"
            }
        ],
        "no-use-before-define": [
            "error",
            {
                "classes": true,
                "variables": true,
                "functions": false
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": [
                    "./src"
                ]
            }
        }
    }
}